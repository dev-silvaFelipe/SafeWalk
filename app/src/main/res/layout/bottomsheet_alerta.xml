<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded"> <ImageView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:src="@android:drawable/ic_dialog_info"
    app:tint="@color/safewalk_accent" />

    <TextView
        android:id="@+id/tvPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="O problema ainda persiste?"
        android:textAlignment="center"
        android:textColor="@color/safewalk_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sua confirmação ajuda a manter o mapa atualizado para outros usuários."
        android:textAlignment="center"
        android:textColor="@color/safewalk_text_gray"
        android:textSize="14sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Sim, ainda existe"
        android:textAllCaps="false"
        android:backgroundTint="@color/safewalk_dark"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResolvido"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:text="Não, já foi resolvido"
        android:textAllCaps="false"
        android:textColor="@color/safewalk_dark"
        app:strokeColor="@color/safewalk_dark"
        app:cornerRadius="12dp" />

</LinearLayout>